-# app/views/admin/articles/_confirm_delete.html.haml

/ %h2 Admin::Articles#_confirm_delete
/ %p Find me at app/views/admin/articles/_confirm_delete.html.haml

= content_for :stylesheets do
  :css
    #confirm-delete-dialog {
      display: none;
    }
    
    #colorbox #confirm-delete-dialog {
      display: block;
    }

= content_for :javascripts do
  :javascript
    jQuery(document).ready(function(){
      jQuery('#confirm-delete-dialog').find('a.cancel-link').click(function(event){
        jQuery.colorbox.close();
        event.preventDefault();
      }); // end click
    }); // end document.ready

#confirm-delete-dialog
  %h2 Confirm Delete
  %p
    Are you sure you want to delete this article?
    %span.red-text Deleted articles are gone forever.
  %p.apple
    = link_to 'Confirm Delete', nil, :class => [:"red-text", :"delete-link"], |
      :title => "Confirm deletion. This will permanently delete the article. This cannot be undone!"
    |
    = link_to 'Cancel Delete', nil, :class => [:"green-text", :"cancel-link"], |
      :title => "Cancel deletion. This will return you to the previous view."
