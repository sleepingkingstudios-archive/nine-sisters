-# app/views/sessions/_form.html.haml

= form_tag :controller => :sessions, :action => :create do
  %p
    = label_tag "Email:"
    = text_field_tag :email, nil, :class => (request.xhr? ? :short : nil)
    %br
    
    = label_tag "Password:"
    = password_field_tag :password, nil, :class => (request.xhr? ? :short : nil)
    %br
    
    = submit_tag "Log In"
