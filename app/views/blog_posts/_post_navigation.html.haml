-# app/views/blog_posts/_post_navigation.html

- blog ||= @blog
- post ||= @post
- first_post = post.first_post
- prev_post  = post.prev_post
- next_post  = post.next_post
- last_post  = post.last_post

%div
  %p{ :style => "float: left; width: 25%;" }
    - if prev_post.nil?
      = lighten "First Post"
      |
      = lighten "Previous"
    - else
      = link_to "First Post", "/blog/posts/#{first_post.slug}"
      |
      = link_to "Previous", "/blog/posts/#{prev_post.slug}"
  %p{ :style => "float: right; text-align: right; width: 25%;" }
    - if next_post.nil?
      = lighten "Next"
      |
      = lighten "Latest Post"
    - else
      = link_to "Next", "/blog/posts/#{next_post.slug}"
      |
      = link_to "Latest Post", "/blog/posts/#{last_post.slug}"
  %p{ :style => "text-align: center;" }
    = link_to "Back to #{blog.title}", "/blog/"
