!!! html
%html
  %head
    %title= Setting[:title]
    = stylesheet_link_tag :application
    = stylesheet_link_tag(mobile? ? :mobile : :desktop)
    = yield :stylesheets
    
    = javascript_include_tag :application
    :javascript
      jQuery(document).ready(function(){
        jQuery('.log-in-link').click(function(event){
          jQuery.colorbox({ href: '#{new_session_path}' });
          event.preventDefault();
        }); // end click
      }); // end document.ready
      
    = yield :javascripts
    
    = csrf_meta_tags
    
  %body.day
    #wrapper
      %header#page-header
        %h1= Setting[:title]
        
        %nav#top-nav
          = navigation_items :wrapper => {:tag => 'li', :class => 'apple'}
          
        = yield :page_header
      
      %section#main-section
        = render 'notices'
        
        = yield
        
      %nav#primary-nav
        %h2 Navigation
        
        - unless current_user.nil?
          %h3 Admin
          %ul
            %li.apple= link_to "Articles", admin_articles_path
            %li.apple= link_to "Categories", admin_categories_path
            %li.apple= link_to "Settings", admin_settings_path
          
          %p
            You are currently logged in as #{current_user.email}.
            %br
            = link_to "Log Out", session_path, :method => :delete, :class => :apple

      %br{:style => "clear: both;"}
    
      #fake-footer &nbsp;
    
    %footer#page-footer
      #footer-container
        - unless (content = (yield :page_footer)).empty?
          = content
        - else
          %h5.tagline Hic Iacet Arthurus, Rex Quondam, Rexque Futuris
    
    :javascript
      var height = jQuery('#page-footer').height();
      jQuery('#fake-footer').height(height);
      jQuery('#wrapper').css('margin-bottom', -height + 'px');
